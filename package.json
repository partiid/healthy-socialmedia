{
  "name": "reactively-api",
  "version": "0.0.1",
  "description": "Rest api bootstrap skeleton written with nestjs and typescript. It contains basic user service with authentication and authorization and also redis cache and prisma database.",
  "author": "Marek ≈Åysiak ",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/reactively-api/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.1",
    "@nestjs/core": "^9.4.1",
    "@nestjs/devtools-integration": "^0.1.4",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/microservices": "^9.4.1",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.1",
    "@nestjs/swagger": "^6.3.0",
    "@prisma/client": "^4.14.1",
    "@types/lodash": "^4.14.194",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.2.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cluster": "^0.7.7",
    "connect-redis": "^6.1.3",
    "dotenv": "^16.0.3",
    "express-session": "^1.17.3",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "lodash.combinations": "^18.11.1",
    "moment": "^2.29.4",
    "ngraph.graph": "^20.0.1",
    "ngraph.path": "^1.4.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "react": "^18.2.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "regex-to-strings": "^2.1.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.1",
    "webpack": "^5.83.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.1",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "28.1.8",
    "@types/node": "^16.18.31",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "28.1.3",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src/",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  },
  "prisma": {
    "seed": "npx ts-node prisma/seed.ts"
  }
}